<%- include('../partials/head.ejs') %>
<body class="body">


    <div class="dashboard-grid grid" id="function">
        <div id="sidebar" class="sidebar">
            <div class="sidebar-header">
                <div class="logo">
                    <img src="/images/Orisun.png" alt="">
                </div>

                <button class="hamburger" id="toggleBtn">&#9776;</button>
            </div>

            <a href="/or-admin#createPost" class="sidebar-button" onclick="showSection('createPost')">Create Post</a>
            <a href="/or-admin#allPosts" class="sidebar-button" onclick="showSection('allPosts')">All posts</a>
            <a href="/" class="sidebar-button" target="_blank">Go to Orisun</a>


            <form action="" method="get" class="search">
                <input type="text" name="Search" id="search" placeholder="Search" autocomplete="off" required>
                <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
            </form>
        </div>

        <div class="main">
            <div class="dashboard-container">
                <div class="createPost content-section active" id="createPost">
                    <form action="/or-admin/editPost/<%= post.id %>" method="post" class="createPost">
                        <input type="text" name="title" id="headline" class="headline" placeholder="Headline here..." value="<%= post.title %>">
                        <textarea name="content" id="paragraph" class="paragraph" placeholder="Paragraph here .."> <%= post.content %></textarea>
                        <input type="text" name="quotation" id="quotation" class="quotation" placeholder="Quotation here .." value="<%= post.quotation %>">
                        <input type="text" name="author" id="author" class="author" placeholder="Author here .." value="<%= post.author %>">
                        <input type="text" name="imageURL" id="imageURL" class="imageURL" placeholder="Image URL here .." value="<%= post.imageurl %>">
                        <input type="text" name="imageAlt" id="image-alt" class="image-alt" placeholder="Image Description Here .." value="<%= post.imagealt %>">
                        <input type="submit" value="Edit Post" id="submit" class="submit">
                    </form>
                </div>
            </div>
        </div>


    </div>



    <script src="https://kit.fontawesome.com/9f49353139.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="js/vanilla.js"></script>
</body>
</html>